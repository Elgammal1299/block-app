<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050A1A"
    android:padding="24dp">

    <!-- Top Bar: Logo + Name + Exit Button -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AppBlock"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_close_x"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:text="✕"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>

    <!-- Main Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Glowing Icon Space -->
        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginBottom="24dp">

            <!-- Radial Background Glow -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_circle_glow" />

            <!-- The Blocked App Icon (Dynamic) -->
            <ImageView
                android:id="@+id/iv_blocked_app_icon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:elevation="4dp"
                android:scaleType="centerInside" />

            <!-- Smaller AppBlock Logo Overlay -->
            <RelativeLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignTop="@id/iv_blocked_app_icon"
                android:layout_alignEnd="@id/iv_blocked_app_icon"
                android:layout_marginTop="-12dp"
                android:layout_marginEnd="-12dp"
                android:elevation="8dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_circle_blue_solid" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_launcher" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- Blocked Title -->
        <TextView
            android:id="@+id/tv_blocked_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تم حظره بواسطة AppBlock"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Detail Message -->
        <TextView
            android:id="@+id/tv_blocked_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تم حظر التطبيق بواسطة الحظر السريع"
            android:textColor="#99AABB"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لقد حاولت فتحه"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="6dp" />

        <!-- Statistics -->
        <TextView
            android:id="@+id/tv_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0× اليوم | 0× الإجمالي"
            android:textColor="#667788"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- The Wisdom (Motivational Quote) -->
        <TextView
            android:id="@+id/tv_motivational_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\"الانضباط هو الجسر بين الأهداف والإنجاز.\""
            android:textColor="#AAAAAA"
            android:textSize="15sp"
            android:textStyle="italic"
            android:gravity="center"
            android:paddingHorizontal="16dp" />

    </LinearLayout>

    <!-- Bottom Action Button -->
    <Button
        android:id="@+id/btn_go_home"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_button_blue"
        android:text="إغلاق"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAllCaps="false" />

</RelativeLayout>
