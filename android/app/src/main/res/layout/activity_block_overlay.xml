<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/block_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050A1A"
    android:padding="24dp">

    <!-- AppBar: Centered App Name -->
    <RelativeLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="AppBlock"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_close_x"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:text="✕"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>

    <!-- Main Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Stacked Icons -->
        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginBottom="-10dp">

            <!-- Radial Background Glow -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_circle_glow" />

            <!-- The Blocked App Icon (Dynamic) -->
            <ImageView
                android:id="@+id/iv_blocked_app_icon"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerInParent="true"
                android:elevation="4dp"
                android:scaleType="centerInside" />

            <!-- AppBlock Logo Overlay (Moved to TOP) -->
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignTop="@id/iv_blocked_app_icon"
                android:layout_alignEnd="@id/iv_blocked_app_icon"
                android:layout_marginTop="-16dp"
                android:layout_marginEnd="-16dp"
                android:elevation="10dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_circle_blue_solid" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/app_logo" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- Blocked Title -->
        <TextView
            android:id="@+id/tv_blocked_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blocked_app_title"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Detail Message -->
        <TextView
            android:id="@+id/tv_blocked_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blocked_app_message"
            android:textColor="#99AABB"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tv_tried_to_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tried_to_open"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="6dp" />

        <!-- Statistics -->
        <TextView
            android:id="@+id/tv_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0× اليوم | 0× الإجمالي"
            android:textColor="#667788"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- The Wisdom (Motivational Quote) -->
        <TextView
            android:id="@+id/tv_motivational_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="&quot;الانضباط هو الجسر بين الأهداف والإنجاز.&quot;"
            android:textColor="#AAAAAA"
            android:textSize="15sp"
            android:textStyle="italic"
            android:gravity="center"
            android:paddingHorizontal="16dp" />

    </LinearLayout>

    <!-- Bottom Action Button -->
    <Button
        android:id="@+id/btn_go_home"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_button_blue"
        android:text="@string/btn_close"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAllCaps="false" />

</RelativeLayout>

