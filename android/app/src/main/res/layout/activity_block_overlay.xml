<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#000000"
    android:padding="32dp">

    <!-- Blocked Icon -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸš«"
        android:textSize="80sp"
        android:layout_marginBottom="24dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_blocked_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blocked_app_title"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/tv_blocked_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blocked_app_message"
        android:textSize="18sp"
        android:textColor="#CCCCCC"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Motivational Quote -->
    <TextView
        android:id="@+id/tv_motivational_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Focus on your goals!"
        android:textSize="16sp"
        android:textColor="#AAAAAA"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginBottom="48dp"
        android:padding="16dp"
        android:background="#222222" />

    <!-- Unlock Button -->
    <Button
        android:id="@+id/btn_unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_unlock"
        android:textSize="16sp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:layout_marginBottom="16dp" />

    <!-- Go Home Button -->
    <Button
        android:id="@+id/btn_go_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_go_home"
        android:textSize="16sp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp" />

</LinearLayout>
